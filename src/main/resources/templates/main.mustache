<html>

<body>
    <div>
        <form method="post">
            <input type="text" name="name" placeholder="Введите имя пользователя"/>
            <input type="text" name="message" placeholder="Введите сообщение">
            <button type="submit">Добавить</button>
        </form>
    </div>
    <div>Список пользователей</div>
    {{#users}}
        <div>
            <b>{{id}}</b>
            <span>{{name}}</span>
            <i>{{message}}</i>
        </div>
    {{/users}}
</body>
</html>